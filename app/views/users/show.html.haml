%h2= @user.email

= render partial: "followings/button", locals: { following: @following, target_user: @user }
%br

.row
  .col-md-4
    - if @user.followings.present?
      = render partial: "users/list", locals: { title: "Followings (#{@user.followings.size})", users: @user.followings }
    - if @user.followers.present?
      = render partial: "users/list", locals: { title: "Followers (#{@user.followers.size})", users: @user.followers }

  .col-md-8
    = render partial: "tweets/list", locals: { tweets: @user_tweets }
    = paginate @user_tweets
